<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/insert_group_linearLayout1"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="@drawable/underline"
        app:layout_constraintBottom_toTopOf="@+id/add_group_linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/insert_group_coath_choice_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#00C7C4C4"
            android:text="@string/str_group_choice_coach" />

        <TextView
            android:id="@+id/insert_group_coath_choice_value"
            android:layout_width="307dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未选择"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/insert_group_coath_choice_value_att"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>